<view class="{{$style}}">
  <view class="bg-color flash-view flex-center-wrap flex-justify-around">
    <view 
      class="relative"
      wx:for="{{texts}}" 
      wx:key="index" 
      wx:if="{{index === stage}}" >
      <view 
        class="{{$flashStatus === 'in' ? item.inName : ''}} {{$flashStatus === 'out' ? item.outName : ''}} animated" 
        style="animation-duration:{{$flashStatus === 'in' ? item.inTime : ''}}{{$flashStatus === 'out' ? item.outTime : ''}}s ">
        <view 
          class="text {{item.direction === 'vertical' ? 'vertical' : ''}}" 
          style="font-size: {{item.fontSize}}px; width: {{item.direction === 'vertical' ? item.fontSize + 'px' : '100%'}};">
          {{item.text}}
        </view>
      </view>
      <view 
        class="{{$flashStatus === 'in' ? item.inName : ''}} animated double" 
        style="animation-duration:{{$flashStatus === 'in' ? item.inTime : ''}}s "
        wx:if="{{item.double}}">
        <view 
          class="text {{item.direction === 'vertical' ? 'vertical' : ''}}" 
          style="font-size: {{item.fontSize}}px; width: {{item.direction === 'vertical' ? item.fontSize + 'px' : '100%'}};">
          {{item.text}}
        </view>
      </view>

      
    </view>
    
  </view>
</view>
