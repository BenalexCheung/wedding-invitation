@import "/app.wxss";

.video-box {
  position: fixed;
  z-index: 200;
  right: 35rpx;
  top: 280rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.video-icon {
  width: 60rpx;
  height: 60rpx;
}

.video-modal {
  position: fixed;
  top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video {
  width: 100%;
  height: 100%;
}

/*遮罩层*/
.modal-mask {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

/*遮罩内容*/
.modal-content {
  display: flex;
  flex-direction: column;
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

/*中间内容*/
.main-content {
  flex: 1;
  height: 100%;
  overflow-y: hidden;
  max-height: 80vh;
  /* 内容高度最高80vh 以免内容太多溢出*/
}

/*底部按钮*/
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #D2D3D5;
  margin-top: 30rpx;
}

.text-title {
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.text-label {
  flex: 1;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel-btn {
  color: #000;
  border-right: 2rpx solid #D2D3D5;
}

.confirm-btn {
  color: #09BA07
}

.text-label {
  color: #000;
}

.text-title {
  color: #B84A39;
}